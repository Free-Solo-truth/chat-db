<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodRecipes" parent="Theme.MaterialComponents.DayNight.NoActionBar">//这里可以设置主题的颜色
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 设置底部导航栏半透明，默认false黑色，设置true半透明 -->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--设置全透明-->
<!--        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>-->

        <!-- Status bar color. -->


        <!-- Android 5.0+，设置状态栏全透明透明 -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="android:textSize">10dp</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ProgressBar" parent="android:style/Widget.Holo.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_rote</item>
        <item name="android:indeterminateDuration">500</item>
    </style>
    <style name="TabLayoutText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/white</item>
    </style>
    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:actionBarSize">46dp</item>
    </style>
    <style name="toolbar_blue_theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/teal_200</item>
        <item name="android:actionBarSize">46dp</item>
    </style>
    <style name="anim_popupWindow">
        <item name="android:windowEnterAnimation">@anim/popupaminin</item>
        <item name="android:windowExitAnimation">@anim/popupaminout</item>
    </style>
    <style name="Dynamic_edittext1">
        <item name="background">@drawable/cancelline_edit</item>
    </style>

</resources>