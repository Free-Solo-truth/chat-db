<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detailbackgorund"
    tools:context=".ui.Activity1.DetailsActivity">


        <LinearLayout
            android:id="@+id/detailBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/topborder"
            app:layout_constraintHorizontal_bias="0.5"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/telPhone"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_phone2"
                >

            </de.hdodenhof.circleimageview.CircleImageView>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/mediumGray"
                >

            </View>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Chat"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Chat"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:src="@drawable/ic_chat"
                >

            </de.hdodenhof.circleimageview.CircleImageView>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>